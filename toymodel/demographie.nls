

to demographie
  ;; taux de croissance du systeme
  let taux 0.02
  
  ask cuisines [
    ifelse bilan-nourriture > 0 [
      let entrants sum(map [ t -> ifelse-value (random-float 1) < t [1] [0] ] (n-values taille [taux]))
      set taille taille + entrants
    ] [
      let sortants abs(bilan-nourriture) / (kg-nourriture-par-pers-jour * 365)
      set taille max(taille - sortants, 0)
    ]
  ]
end


